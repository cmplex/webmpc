<!DOCTYPE html>
<html>
<head>
  <title>Webmpc</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, id: "flash_#{name}" if msg.is_a?(String) %>
  <% end %>

  <nav>
    <%= nav_link "song", :now_playing %>
    <%= nav_link "playlist", :playlist %>
    <%= nav_link "search", :search %>
    <%= nav_link "browse", :browse %>

    <% if user_signed_in? %>
      <%= link_to "logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "login", new_user_session_path, class: current?(new_user_session_path) %>
    <% end %>
  </nav>

  <%= yield %>
</body>
</html>
